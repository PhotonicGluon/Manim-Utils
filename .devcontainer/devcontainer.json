{
    "name": "Manim-Utils",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "postCreateCommand": [
        "/bin/sh",
        "-c",
        "/bin/bash ./.devcontainer/postCreateCommand.sh"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-python.python",
                "njpwerner.autodocstring",
                "streetsidesoftware.code-spell-checker",
                "tamasfe.even-better-toml",
                "yzhang.markdown-all-in-one"
            ]
        }
    }
}
